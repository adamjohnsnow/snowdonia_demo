
<h3>Clients</h3>
<div class="table">
  <div class="table-body">
    <div class="table-row header-row">
      <div class="table-cell">Company</div>
      <div class="table-cell">Address</div>
      <div class="table-cell">Contact Name</div>
      <div class="table-cell">Email</div>
      <div class="table-cell">Phone</div>
    </div>
    <% @clients.each do |client| %>
      <div class="table-row">
        <div class="table-cell"><%= client.name %></div>
        <div class="table-cell"><%= client.address %></div>
        <div class="table-cell"><%= client.manager %></div>
        <div class="table-cell"><%= client.email %></div>
        <div class="table-cell"><%= client.phone %></div>
      </div>
    <% end %>
  </div>
</div>

<%= erb :report_header %>
<h3>Draughting Sheet</h3>
<div class="table">
  <div class="table-row header-row">
    <div class="table-cell" style="width: 85px;">
      Account Code
    </div>
    <div class="table-cell" style="width: 85px;">
      Our Ref
    </div>
    <div class="table-cell" style="width: 85px;">
      Client Ref
    </div>
    <div class="table-cell" style="min-width: 280px;">
      Description
    </div>
    <div class="table-cell" style="width: 85px;">
      Unit
    </div>
    <div class="table-cell" style="width: 85px;">
      Qty
    </div>
  </div>
<% @materials.elements.all(:order => [ :el_order.asc ]).each do |element| %>
  <div class="table-row">
    <div class="table-cell grey-cell">
    </div>
    <div class="table-cell grey-cell">
      <%= element.reference %>
    </div>
    <div class="table-cell grey-cell">
      <%= element.client_ref %>
    </div>
    <div class="table-cell grey-cell">
      <strong><%= element.title %></strong>
    </div>
    <div class="table-cell grey-cell">
    </div>
    <div class="table-cell grey-cell">
    </div>
  </div>
  <% @materials.all(:element_id => element.id, :order => [ :mat_order.asc ]).each do |mat|
    if mat.units > 0 %>
      <div class="table-row el<%= element.id %>" name="el-row">
        <div class="table-cell">
          <%= mat.material.costcode.code %>
        </div>
        <div class="table-cell">
        </div>
        <div class="table-cell">
        </div>
        <div class="table-cell">
          <%= mat.material.description %> (<%= mat.material.supplier %>)
        </div>
        <div class="table-cell">
          <%= mat.material.unit %>
        </div>
        <div class="table-cell">
          <%= mat.units %>
        </div>
      </div>
    <% end %>
    <% end %>
  <% end %>
</div>

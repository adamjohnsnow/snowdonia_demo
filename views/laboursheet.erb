<%= erb :report_header %>
<h3>Labour Sheet</h3>
<div class="table">
  <div class="table-row header-row">
    <div class="table-cell" style="width: 85px;">
      Our Ref
    </div>
    <div class="table-cell" style="width: 85px;">
      Client Ref
    </div>
    <div class="table-cell" style="min-width: 280px;">
      Description
    </div>
    <div class="table-cell" style="width: 85px;">
      Days
    </div>
  </div>
  <div class="table-row">
    <div class="table-cell grey-cell">
    </div>
    <div class="table-cell grey-cell">
    </div>
    <div class="table-cell grey-cell">
      <strong>Totals</strong>
    </div>
    <div class="table-cell grey-cell">
    </div>
  </div>
  <% LABOURTYPES.each do |labour| %>
    <div class="table-row" name="el-row">
      <div class="table-cell">
      </div>
      <div class="table-cell">
      </div>
      <div class="table-cell">
        <%= labour.to_s.gsub('_', ' ').split.map(&:capitalize).join(' ') %>
      </div>
      <div class="table-cell">
        <%= @project.elements.all.element_labours.sum(labour) %>
      </div>
    </div>
  <% end %>

  <% @project.elements.all(:order => [ :el_order.asc ]).each do |element| %>
    <div class="table-row">
      <div class="table-cell grey-cell">
        <%= element.reference %>
      </div>
      <div class="table-cell grey-cell">
        <%= element.client_ref %>
      </div>
      <div class="table-cell grey-cell">
        <strong><%= element.title %></strong>
      </div>
      <div class="table-cell grey-cell">
      </div>
    </div>
    <% LABOURTYPES.each do |labour|
      if element.element_labour[labour] > 0 %>
        <div class="table-row el<%= element.id %>" name="el-row">
          <div class="table-cell">
          </div>
          <div class="table-cell">
          </div>
          <div class="table-cell">
            <%= labour.to_s.gsub('_', ' ').split.map(&:capitalize).join(' ') %>
          </div>
          <div class="table-cell">
            <%= element.element_labour[labour] %>
          </div>
        </div>
      <% end %>
      <% end %>
    <% end %>
  </div>
